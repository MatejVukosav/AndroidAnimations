<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:id="@+id/activity_shared_element_transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="vuki.com.animations.SharedElementTransitionActivity">


        <TextView
            android:id="@+id/tekstTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="tekst1"
            tools:txt="Ovdje ce pisati neki tekst"/>

        <ImageView
            android:id="@+id/slika1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            android:transitionName="slika1"
            tools:src="@drawable/gorila"
            />

        <ImageView
            android:id="@+id/slikaReveal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/tigar"
            />


    </LinearLayout>
</layout>